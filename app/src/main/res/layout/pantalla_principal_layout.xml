<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nick2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Bot贸n de cerrar sesi贸n en la esquina superior izquierda -->
        <ImageButton
            android:id="@+id/btnCerrarSesion"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="start|top"
            android:layout_margin="16dp"
            android:contentDescription="Cerrar Sesi贸n"
            android:scaleType="centerInside"
            android:background="@drawable/circle_logout_background"
            android:src="@drawable/ic_logout"
            app:tint="#FFFFFF" />

        <!-- Bot贸n de perfil en la esquina superior derecha -->
        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end|top"
            android:layout_margin="16dp"
            android:contentDescription="Perfil"
            android:scaleType="centerInside"
            android:background="@color/purple_200"
            android:src="@drawable/ic_people"
            app:tint="#FFFFFF" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnCompeticiones"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="@color/red"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Competiciones"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnResultados"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@color/red"
            android:text="Resultados"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

</LinearLayout>